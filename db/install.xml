<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/course_reminder/db" VERSION="20230529" COMMENT="XMLDB file for Moodle local/course_reminder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_course_reminder" COMMENT="Default comment for local_course_reminder">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Course ID"/>
        <FIELD NAME="enable" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="If set to 1 then emails will be sent if set to NULL or 0 , emails will not be sent"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="relatedcourse" TYPE="unique" FIELDS="courseid" COMMENT="Related course from Course table ID"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_course_reminder_email" COMMENT="This table shows if the email has been sent to the user">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Course ID"/>
        <FIELD NAME="studentid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Student ID"/>
        <FIELD NAME="emailtosent" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="email to be sent to user"/>
        <FIELD NAME="emailsent" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Has the email been sent"/>
        <FIELD NAME="assignmentid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Assignment ID"/>
        <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="quiz ID"/>
        <FIELD NAME="emailtime" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Email sent time"/>
        <FIELD NAME="component" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Component Assignment or Quiz"/>
        <FIELD NAME="assignmentdate" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Assignment Date Original"/>
        <FIELD NAME="assignmentoverridedate" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Assignment Overwrite Date"/>
        <FIELD NAME="contextinstanceid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="contextinstanceid"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="studentid" TYPE="foreign" FIELDS="studentid" REFTABLE="user" REFFIELDS="id" COMMENT="Student ID KEY"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id" COMMENT="Course id KEY"/>
        <KEY NAME="assignmentid" TYPE="foreign" FIELDS="assignmentid" REFTABLE="assign" REFFIELDS="id" COMMENT="assignment ID key"/>
        <KEY NAME="quizid" TYPE="foreign" FIELDS="quizid" REFTABLE="quiz" REFFIELDS="id" COMMENT="Quiz id key"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
